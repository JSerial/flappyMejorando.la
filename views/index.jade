extends layout

block content
    div(id="wrapper")
        section(class="cols sect-3", id="sidebar")
            div(id="top_bar")
                span= title
            article(id="puntaje")
                h2 Puntaje
                table(id="lista", width="100%")
            article
                form(method="POST", action="/insert_score")
                    input(type="text",name="name")
                    input(type="text",name="score")
                    input(type="submit", value="Enviar")
        section(class="cols sect-9",id="central")
            div(id="phone")
                div(id="preparate", class="animated")
                canvas(id="lienzo")
    script(type='text/javascript').
        iniciar()
        init()

